// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  clerkId               String    @unique @map("clerk_id")
  email                 String    @unique
  firstName             String?   @map("first_name")
  lastName              String?   @map("last_name")
  fullName              String?   @map("full_name")
  imageUrl              String?   @map("image_url")
  username              String?   @map("username")
  phoneNumbers          Json?     @map("phone_numbers")
  emailAddresses        Json?     @map("email_addresses")
  publicMetadata        Json?     @map("public_metadata")
  privateMetadata       Json?     @map("private_metadata")
  unsafeMetadata        Json?     @map("unsafe_metadata")
  externalId            String?   @map("external_id")
  lastSignInAt          DateTime? @map("last_sign_in_at")
  passwordEnabled       Boolean?  @default(false) @map("password_enabled")
  twoFactorEnabled      Boolean?  @default(false) @map("two_factor_enabled")
  totpEnabled           Boolean?  @default(false) @map("totp_enabled")
  backupCodeEnabled     Boolean?  @default(false) @map("backup_code_enabled")
  emailVerified         Boolean?  @default(false) @map("email_verified")
  phoneVerified         Boolean?  @default(false) @map("phone_verified")
  organizationMemberships Json?   @map("organization_memberships")
  role                  String?   @default("user")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model WaitlistEntry {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String
  ventureName   String   @map("venture_name")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("waitlist_entries")
}

model ICPAnalysis {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String?  @map("user_id") @db.ObjectId
  url               String
  productDescription String? @map("product_description")
  targetRegion      String? @map("target_region")
  status            String   @default("pending") // pending, completed, failed, retrying
  scrapedContent    Json?    @map("scraped_content")
  icpResult         Json?    @map("icp_result") // Full ICP analysis result
  primaryICP        String?  @map("primary_icp")
  confidenceScore   Float?   @map("confidence_score")
  errorMessage      String?  @map("error_message")
  retryCount        Int      @default(0) @map("retry_count")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@index([userId])
  @@index([status])
  @@map("icp_analyses")
}

model Settings {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String   @unique @map("user_id") @db.ObjectId
  aiProvider        String   @default("openai") @map("ai_provider") // openai, anthropic
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@map("settings")
}
